
with-variant native os@-omniorb:[v] os@-omniorb-dev:[v] os@-omniorb-idl:[v] \
             os@-omniidl:[v] os@-cos4-dev:[v] os@-omniorb-nameserver:[v]    \
             --env 'set-var    OMNIORB_ROOT_DIR   /usr'         \
                   'add-to-var LD_LIBRARY_PATH    /usr/lib'

function s-omniorb-vcs()
{
    echo edf
    echo none
    echo svn
    echo https://svn.code.sf.net/p/omniorb/svn
    echo omniORB
}

function s-omniorb-cea-archive()
{
    local VERSION=$1

    echo edf
    echo none
    echo wget
    echo ftp://ftp.cea.fr/pub/salome/prerequisites
    echo omniORB-$VERSION.tar.gz
}

function s-omniorb-archive()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo omniORB-$VERSION.tar.gz
}

function s-omniorb-mingw-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3
    local KIND=$4
    local REF=$5

    echo omniORB-4.2.6.msys2.patch
}

function s-omniorb-depends()
{
    echo os@-python3-dev
}

function s-omniorb-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    OMNIORB_ROOT_DIR   $PREFIX

    add-to-var C_INCLUDE_PATH     $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
    add-to-var PATH               $PREFIX/bin
}

function s-omniorb-mingw-env()
{
    local PREFIX=$1
    local TARGET=$2
 
    set-var    OMNIORB_ROOT_DIR   $PREFIX
    set-var    OMNIORB_ROOT       $PREFIX/../src
    add-to-var PATH               ${OMNIORB_ROOT_DIR}/bin/x86_win32
    add-to-var PATH               ${OMNIORB_ROOT_DIR}/lib/x86_win32
    add-to-var PYTHONPATH         ${OMNIORB_ROOT_DIR}/lib/python
    add-to-var PYTHONPATH         ${OMNIORB_ROOT_DIR}/lib/x86_win32
    set-var    OMNIORB_LIB_DIR    ${OMNIORB_ROOT_DIR}/lib/x86_win32
    set-var    OMNIORB_BIN_DIR    ${OMNIORB_ROOT_DIR}/bin/x86_win32
    set-var    OMNIORB_USER_PATH  ${APPDATA}

    set-var    OMNIORBPY_DIR      ${OMNIORB_ROOT}/src/lib/omniORBpy
    add-to-var LD_LIBRARY_PATH    ${OMNIORB_ROOT_DIR}/lib
}

function s-omniorb-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure PYTHON=/usr/bin/python3 --prefix=$PREFIX
}

function s-omniorb-mingw-config()
{
    local PREFIX=$1
    local TARGET=$2

    echo NONE
}

function s-omniorb-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-omniorb-mingw-build()
{
    echo NONE
    local PREFIX=$1
    local TARGET=$2
    cd ../src/src/tool/omkdepend
    make export
    cd ../../
    make export
    cd ../..
}

function s-omniorb-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-omniorb-mingw-install()
{
    local PREFIX=$1
    local TARGET=$2

    mkdir -p $PREFIX
    cp -r ../src/bin $PREFIX
    cp -r ../src/src/lib $PREFIX
}

function s-omniorb-prefix()
{   
    echo NONE
}
