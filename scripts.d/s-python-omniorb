
function s-python-omniorb-vcs()
{
    echo edf
    echo none
    echo svn
    echo https://svn.code.sf.net/p/omniorb/svn
    echo omniORBpy
}

function s-python-omniorb-cea-archive()
{
    local VERSION=$1

    echo edf
    echo none
    echo wget
    echo ftp://ftp.cea.fr/pub/salome/prerequisites
    echo omniORBpy-$VERSION.tar.gz
}

function s-python-omniorb-archive()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo omniORBpy-$VERSION.tar.gz
}

function s-python-omniorb-mingw-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3
    local KIND=$4
    local REF=$5

    # Calling popen does not work by default. 
    # The patch aims to fix this anomaly after discussion with the omniORB developer.
    echo omniORBpy-4.2.6.msys2.patch
}

function s-python-omniorb-depends()
{
    echo s-omniorb
}

function s-python-omniorb-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    OMNIORBPY_ROOT_DIR $PREFIX

    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/omniidl_be
    add-to-var PYTHONPATH         \
               $(dirname $(get-os-bin \
               $PREFIX/lib*/python$PYTHON_VERSION/site-packages/_omnipy*so))
}

function s-python-omniorb-mingw-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Les variables d'environnement ont été définies dans s-omniorb
    set-var    OMNIORBPY_ROOT_DIR ${OMNIORB_ROOT_DIR}

}

function s-python-omniorb-config()
{
    local PREFIX=$1
    local TARGET=$2

    CXXFLAGS="-fpermissive" ../src/configure \
	    --prefix=$PREFIX --with-omniorb=$OMNIORB_ROOT_DIR \
            PYTHON=$(command -v python3)
}

function s-python-omniorb-mingw-config()
{
    local PREFIX=$1
    local TARGET=$2

    echo $OMNIORBPY_DIR
    cp -r ../src $OMNIORBPY_DIR
}

function s-python-omniorb-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-python-omniorb-mingw-build()
{
    local PREFIX=$1
    local TARGET=$2
    
    echo $OMNIORBPY_DIR
    cd $OMNIORBPY_DIR
    echo $OMNIORBPY_DIR
    make export
}

function s-python-omniorb-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-python-omniorb-mingw-install()
{
    local PREFIX=$1
    local TARGET=$2

    # On met à jour le repertoire installation de omniorb
    # car toute les variables pointent dessus
    cp -r $OMNIORB_ROOT/bin $OMNIORB_ROOT_DIR
    cp -r $OMNIORB_ROOT/src/lib $OMNIORB_ROOT_DIR
}

function s-python-omniorb-prefix()
{
    echo NONE
}
