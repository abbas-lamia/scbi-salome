inherit-plugin c-clang

with-variant native os@-clang:[v]

#  Adds a Windows variant using the MingW64 clang version
with-variant win \
  --env 'add-to-var PATH $MINGW_PREFIX'

function s-clang-vcs()
{
    echo edf
    echo none
    echo git
    echo https://github.com/llvm/llvm-project.git
}

function s-clang-archive()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo llvm-$VERSION.src.tar.gz
}
