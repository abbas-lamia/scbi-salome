
with-variant native s-hdf5 os@-netcdf-dev

function s-netcdf-vcs()
{
    echo edf
    echo none
    echo git
    echo https://github.com/Unidata/netcdf-c.git
}

function s-netcdf-cea-archive()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo ftp://ftp.cea.fr/pub/salome/prerequisites
    echo netcdf-c-$VERSION.tar.gz
}

function s-netcdf-mingw-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3
    local KIND=$4
    local REF=$5

    # Add preprocessor flag __MINGW32__ for MSYS2 support
    echo netcdf-4.7.4.msys2.patch
}

function s-netcdf-build-depends()
{
    echo s-cmake
}

function s-netcdf-depends()
{
    echo s-hdf5
    echo os@-curl4-gnutls-dev
}

function s-netcdf-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    NETCDF_ROOT_DIR    $PREFIX

    add-to-var C_INCLUDE_PATH     $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include
    add-to-var LIBRARY_PATH       $PREFIX/lib
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
}

function s-netcdf-mingw-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    NETCDF_ROOT_DIR    $PREFIX

    add-to-var C_INCLUDE_PATH     $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include
    add-to-var LIBRARY_PATH       $PREFIX/lib
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
    add-to-var PATH               $PREFIX/bin
}

function s-netcdf-mingw-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
		-G"MSYS Makefiles" \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DENABLE_NETCDF_4=ON \
		-DBUILD_UTILITIES=ON \
		-DBUILD_SHARED_LIBS=ON \
		-DENABLE_DAP=OFF \
		-DENABLE_TESTS=ON \
		-DENABLE_UNIT_TESTS=OFF \
		-DHDF5_HL_LIBRARY=${HDF5_ROOT_DIR}/lib/libhdf5_hl.dll.a \
		-DHDF5_C_LIBRARY=${HDF5_ROOT_DIR}/lib/libhdf5.dll.a\
		-DHDF5_INCLUDE_DIR=${HDF5_ROOT_DIR}/include \
        ../src
}

function s-netcdf-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DHDF5_INCLUDE_DIR=$HDF5_C_INCLUDE_DIR \
          -DHDF5_LIBRARIES=$HDF5_LIBRARIES \
          -DHDF5_C_LIBRARY=$HDF5_C_LIBRARY_hdf5 \
          -DHDF5_HL_LIBRARY=$HDF5_C_LIBRARY_hdf5_hl \
          -DHAVE_HDF5_H=$HDF5_ROOT_DIR/include/hdf5.h \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release) \
          ../src
}

function s-netcdf-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-netcdf-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-netcdf-prefix()
{
    echo NONE
}
